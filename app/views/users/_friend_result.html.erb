<div class="results-block mb-2">
  <%= render 'layouts/messages' %>
</div>

<% if @friends %>
  <div class="card card-header results-block mb-3">
    <table class="col-md-12">
      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <td><strong>Name: </strong><%= friend.full_name %></td>
            <td><strong>Email: </strong><%= friend.email %></td>
            <td><strong>Actions: </strong><%= link_to 'View Profile', "#", class: "btn-sm btn-primary" %>
            <% unless current_user.friends_with?(friend.id) %>
            <%= link_to 'Add as friend', "#", class: "btn-sm btn-primary", method: :post %>
            <% else %>
              <span class="badge badge-secondary">Already friends</span>
            <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
